{% extends 'base.html.twig' %}

{% block title %}Tous les Produits
{% endblock %}

{% block body %}

<a href="{{ path('app_produit_new') }}" class="btn btn-primary">Create new</a>



	<table class="table datatable">
		<thead>
			<tr>
				<th>#</th>
				<th>Libelle</th>
				<th>Image</th>
				<th>Quantity</th>
				<th>Price</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for produit in produits %}
				<tr>
					<td><a href="{{ path('app_produit_show', {'id': produit.id}) }}">{{ produit.id }}</a></td>
					<td>{{ produit.libelle }}</td>
					<td>{{ produit.image }}</td>
					<td>{{ produit.quantity }}</td>
					<td>{{ produit.price }}</td>
					<td>
						<a href="{{ path('app_produit_edit', {'id': produit.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="6">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
