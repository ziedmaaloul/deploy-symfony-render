{% extends 'base.html.twig' %}

{% block title %}Tous les Commandes
{% endblock %}

{% block body %}
	<a href="{{ path('app_commande_new') }}" class="btn btn-primary">Create new</a>

	<table class="table datatable">
		<thead>
			<tr>
				<th>#</th>
				<th>Datecomm</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for commande in commandes %}
				<tr>
					<td>
						<a href="{{ path('app_commande_show', {'id': commande.id}) }}">{{ commande.id }}</a>
					</td>
					<td>{{ commande.datecomm ? commande.datecomm|date('Y-m-d') : '' }}</td>
					<td>
						<a href="{{ path('app_commande_edit', {'id': commande.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
